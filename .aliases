#!/bin/zsh

# shell ux
alias hist="history 1"

# ls
alias ls="ls -F --color"
alias lsa="ls -a"
alias ll="ls -lh"
alias lla="ls -lha"
alias l=ll

# vim -> nvim
alias vim="nvim"

# vim-style quit
alias :q="exit"

# git aliases
alias ga="git add"
alias gb="git branch"
alias gc="git commit"
alias gco="git checkout"
alias gcp="git cherry-pick"
alias gd="git diff"
alias gds="git diff --staged"
alias gg="git push"
alias ggf="git push --force-with-lease"
alias gl="git lg"
alias gn="git checkout -b"
alias gp="git pull"
alias gr="git reset HEAD --"
alias grb="git rebase -i"
alias grbc="git rebase --continue"
alias grbs="git rebase --skip"
alias gs="git status"

# npm aliases
alias ni="npm install"
alias nid="npm install --save-dev"
alias nu="npm uninstall"
alias ns="npm start"
alias nt="npm test"
alias nr="npm run"
alias nb="npm run build"
alias nd="npm run dev"

# python aliases
alias p="python3"
alias python="python3"
alias pip="pip3"

# suffixed aliases
alias -s js="node"
alias -s ts="deno run"
alias -s py="python3"
alias -s git="git clone"

# bulk association
alias -s {md,json,css,html}=code

# misc
alias zrc="source $HOME/.zshrc"

# macOS aliases
if [[ $(uname) == "Darwin" ]]; then

# use the GNU coreutils ls if available
gls -d . &>/dev/null 2>&1 && alias ls="gls -F --color" || alias ls="ls -FG"

# get ip address
alias ip="ipconfig getifaddr en0"

# restart
alias ugh="osascript -e 'tell app \"System Events\" to restart'"

# sleep
alias z="pmset displaysleepnow"
alias zz="pmset sleepnow"

# flush dns cache
alias flushdns="dscacheutil -flushcache"

# force removal of quarantine attribute on unsigned executables
alias allow-run="xattr -d com.apple.quarantine"
fi
