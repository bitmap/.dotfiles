# preferences
[core]
	ignorecase = false
	editor = nvim
	pager = delta
[init]
	defaultBranch = main
[commit]
	verbose = true
	gpgsign = true
[pull]
	rebase = true
[push]
	default = simple
[rerere]
	enabled = true

# siging
[gpg]
	format = ssh
[credential]
	helper = osxkeychain

# diffing
[interactive]
	diffFilter = delta --color-only --diff-so-fancy
[delta]
	features = asni
	navigate = true
	dark = true
	line-numbers = true
	syntax-theme = Solarized (dark)
[merge]
	conflictstyle = diff3
[diff]
	colorMoved = default

# logging
[log]
	date = relative
[pretty]
	shortlog = format:%C(3)%h %C(2)[%cs] %C(reset)- %s %C(4)<%an>%C(auto)%d %C(reset)


# UI
[column]
	ui = auto
[branch]
	sort = -committerdate
[color]
	ui = true
[color "branch"]
	current = 3 reverse
	local = 3
	remote = 6
[color "status"]
	added = 2
	changed = 3
	untracked = 6
	unmerged = 1
	branch = 5

# aliases
[alias]
	it = !git init && git commit -m "root" --allow-empty
	got = pull --rebase origin
	please = push --force-with-lease
	forget = checkout --
	amend = commit --amend
	recommit = commit --amend --no-edit
	uncommit = reset --soft HEAD^
	fucked = reset --hard HEAD
	hoard = stash --include-untracked
	lg = -c core.pager='less -S' log --color --graph --decorate --pretty=shortlog --abbrev-commit
	last = log --abbrev-commit HEAD^..HEAD
	upstream = rev-parse --abbrev-ref --symbolic-full-name @{u}
	bb = !~/.config/git/scripts/better-git-branch.sh
	pushup = !~/.config/git/scripts/pushup.sh
	prune-merged = !~/.config/git/scripts/prune-branches.sh
	prune-squashed = !~/.config/git/scripts/prune-squashed.sh

# set options on a per-machine basis via include files
[include]
	path = "~/.git-ssh-sign"
	path = "~/.git-maintenance"

