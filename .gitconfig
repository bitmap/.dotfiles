	email = 1258606+bitmap@users.noreply.github.com
	signingkey = ssh-ed25519 AAAAC3NzaC1lZDI1NTE5AAAAIN1r/gDV1b8WNy9cg7/H5+v+5qvvVHZkGbKIYvyfm/yb
[core]
	ignorecase = false
	editor = nvim
	pager = delta
[alias]
	it = !git init && git commit -m "root" --allow-empty
	got = pull --rebase origin
	please = push --force-with-lease
	forget = checkout --
	amend = commit --amend
	recommit = commit --amend --no-edit
	uncommit = reset --soft HEAD^
	fucked = reset --hard HEAD
	hoard = stash --include-untracked
	lg = -c core.pager='less -S' log --color --graph --decorate --pretty=shortlog --abbrev-commit
	last = log --abbrev-commit HEAD^..HEAD
	upstream = rev-parse --abbrev-ref --symbolic-full-name @{u}
[color]
	ui = true
[color "branch"]
	current = 3 reverse
	local = 3
	remote = 6
[color "status"]
	added = 2
	changed = 3
	untracked = 6
	unmerged = 1
	branch = 5
[commit]
	verbose = true
	gpgsign = true
[pull]
	rebase = true
[push]
	default = simple
[credential]
	helper = osxkeychain
[log]
	date = relative
[pretty]
	shortlog = format:%C(3)%h %C(2)[%cs] %C(reset)- %s %C(4)<%an>%C(auto)%d %C(reset)
[init]
	defaultBranch = main
[gpg]
	format = ssh
[interactive]
	diffFilter = delta --color-only
[delta]
	navigate = true
[merge]
	conflictstyle = diff3
[diff]
	colorMoved = default

# set gpg "ssh" option on a per-machine basis via include file
# [gpg "ssh"] 
# 	program = "/opt/1Password/op-ssh-sign"; linux
# 	program = "/Applications/1Password.app/Contents/MacOS/op-ssh-sign"; macos
[include]
	path = "~/.git-gpg-ssh"
